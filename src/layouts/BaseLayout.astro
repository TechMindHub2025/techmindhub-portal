---
/**
 * BaseLayout.astro
 * - Global shell: header (banner + nav), content container, footer
 * - Brand palette is aligned with TechMind Hub logo:
 *   Primary: #0046AF, Accent: #00CFFD, Text: #003E54
 */

const {
  title = "TechMind Hub",
  description = "TechMind Hub — curated notes on AI, robotics, automation, and enterprise tech.",
  ogImage, // optional per-page override
} = Astro.props;

const canonical = new URL(
  Astro.url.pathname,
  Astro.site ?? Astro.url.origin
).toString();

// Set a reasonable default OpenGraph image.
// You can override per page by passing ogImage prop.
const ogImageUrl = ogImage
  ? new URL(ogImage, Astro.site ?? Astro.url.origin).toString()
  : new URL("/banner1.png", Astro.site ?? Astro.url.origin).toString();
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="canonical" href={canonical} />
    <meta name="description" content={description} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="/banner.png" />
    <meta property="og:url" content={canonical} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="/banner.png" />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="shortcut icon" href="/favicon.ico" />

    <!-- Apple -->
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />

    <!-- Android / PWA -->
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="theme-color" content="#003E54" />

    <title>{title}</title>

    <style>
      :root {
        color-scheme: light;

        /* Brand palette */
        --brand: #0046af;
        --accent: #00cffd;
        --text: #003e54;

        /* UI palette */
        --bg: #f9fafb;
        --panel: #ffffff;
        --border: rgba(0, 62, 84, 0.12);
        --muted: rgba(0, 62, 84, 0.72);
        --muted2: rgba(0, 62, 84, 0.56);

        --shadow: 0 10px 30px rgba(0, 62, 84, 0.08);
        --radius: 18px;

        --max: 1100px;
        --pad: 24px;
      }

      * { box-sizing: border-box; }
      html, body { height: 100%; }
      body {
        margin: 0;
        background: var(--bg);
        color: var(--text);
        font-family: system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
        line-height: 1.55;
      }

      a {
        color: var(--brand);
        text-decoration: none;
      }
      a:hover { text-decoration: underline; }

      .container {
        max-width: var(--max);
        margin: 0 auto;
        padding: 0 var(--pad);
      }

      /* Header */
      .site-header {
        background: var(--panel);
        border-bottom: 1px solid var(--border);
      }

      .banner {
        position: relative;
        overflow: hidden;
        border-bottom: 1px solid var(--border);
      }

      .banner img {
        display: block;
        width: 100%;
        height: 220px;
        object-fit: cover;
      }

      /* Subtle gradient overlay for readability */
      .banner::after {
        content: "";
        position: absolute;
        inset: 0;
        background: linear-gradient(
          180deg,
          rgba(255,255,255,0.05) 0%,
          rgba(249,250,251,0.65) 70%,
          rgba(249,250,251,0.95) 100%
        );
        pointer-events: none;
      }

      .topbar {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 16px;
        padding: 16px 0;
      }

      .brand {
        display: flex;
        align-items: center;
        gap: 12px;
        min-width: 220px;
      }

      .brand img {
        width: 40px;
        height: 40px;
        border-radius: 12px;
        box-shadow: 0 6px 16px rgba(0, 62, 84, 0.14);
      }

      .brand-title {
        display: flex;
        flex-direction: column;
        gap: 2px;
      }

      .brand-title strong {
        letter-spacing: 0.2px;
        font-size: 15px;
        line-height: 1.2;
      }

      .brand-title span {
        font-size: 12px;
        color: var(--muted2);
        line-height: 1.2;
      }

      nav {
        display: flex;
        gap: 14px;
        align-items: center;
        flex-wrap: wrap;
        justify-content: flex-end;
      }

      nav a {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 8px 10px;
        border-radius: 12px;
        font-weight: 650;
        font-size: 14px;
        color: var(--text);
        text-decoration: none;
      }

      nav a:hover {
        background: rgba(0, 207, 253, 0.10);
        text-decoration: none;
      }

      nav a[data-active="true"] {
        color: var(--brand);
        background: rgba(0, 70, 175, 0.08);
      }

      /* Main */
      main {
        padding: 26px 0 56px;
      }

      /* Footer */
      footer {
        border-top: 1px solid var(--border);
        background: var(--panel);
      }

      .footer-inner {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 16px;
        padding: 18px 0;
        color: var(--muted2);
        font-size: 13px;
      }

      .footer-brand {
        display: inline-flex;
        align-items: center;
        gap: 10px;
      }

      .footer-brand img {
        width: 22px;
        height: 22px;
        border-radius: 8px;
        opacity: 0.95;
      }

      /* Small screens */
      @media (max-width: 720px) {
        .banner img { height: 160px; }
        .topbar { flex-direction: column; align-items: flex-start; }
        nav { justify-content: flex-start; }
      }
    </style>
  </head>

  <body>
    <header class="site-header">
      <!-- Banner image (Substack-like header) -->
      <div class="banner">
        <img src="/banner.png" alt="TechMind Hub banner" loading="eager" />
      </div>

      <div class="container">
        <div class="topbar">
          <a class="brand" href="/" aria-label="TechMind Hub home">
            <img src="/logo.png" alt="TechMind Hub logo" />
            <div class="brand-title">
              <strong>TechMind Hub</strong>
              <span>AI • Robotics • Automation • Enterprise Tech</span>
            </div>
          </a>

          <nav aria-label="Primary navigation">
            <a href="/" data-active={Astro.url.pathname === "/"}>Home</a>
            <a
              href="/posts"
              data-active={Astro.url.pathname.startsWith("/posts")}
            >
              Posts
            </a>
            <a
              href="/about"
              data-active={Astro.url.pathname.startsWith("/about")}
            >
              About
            </a>
          </nav>
        </div>
      </div>
    </header>

    <main>
      <div class="container">
        <slot />
      </div>
    </main>

    <footer>
      <div class="container">
        <div class="footer-inner">
          <span>© {new Date().getFullYear()} TechMind Hub</span>
          <span class="footer-brand">
            <img src="/logo.png" alt="TechMind Hub" />
            <span>Built on Astro + GitHub Pages</span>
          </span>
        </div>
      </div>
    </footer>
  </body>
</html>
