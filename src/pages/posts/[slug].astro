---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

// Build all static routes for published posts
export async function getStaticPaths() {
  const posts = await getCollection("posts", ({ data }) => data.status === "published");

  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;

// Defensive: if someone opens a draft by direct URL in dev, show 404
if (post.data.status !== "published") {
  return Astro.redirect("/posts");
}

const { title, description, pubDate, tags, source_url, cover_hero, cover_alt, social } = post.data;
---

<BaseLayout title={title} description={description}>
  <article class="post">
    <header class="post__header">
      <h1 class="post__title">{title}</h1>

      <div class="post__meta">
        <time datetime={pubDate.toISOString()}>
          {pubDate.toISOString().slice(0, 10)}
        </time>

        {source_url && (
          <>
            <span class="dot">Â·</span>
            <a class="link" href={source_url} target="_blank" rel="noopener noreferrer">
              Source
            </a>
          </>
        )}
      </div>

      {cover_hero && (
        <figure class="post__hero">
          <img
            src={cover_hero}
            alt={cover_alt || title}
            loading="eager"
          />
        </figure>
      )}

      {tags?.length ? (
        <div class="post__tags">
          {tags.map((t) => (
            <a class="tag" href={`/posts?tag=${encodeURIComponent(t)}`}>#{t}</a>
          ))}
        </div>
      ) : null}

      {(social?.linkedin || social?.facebook) && (
        <div class="post__social">
          {social?.linkedin && (
            <a class="btn" href={social.linkedin} target="_blank" rel="noopener noreferrer">
              Discuss on LinkedIn
            </a>
          )}
          {social?.facebook && (
            <a class="btn" href={social.facebook} target="_blank" rel="noopener noreferrer">
              Discuss on Facebook
            </a>
          )}
        </div>
      )}
    </header>

    <div class="post__content">
      <slot />
    </div>
  </article>
</BaseLayout>
