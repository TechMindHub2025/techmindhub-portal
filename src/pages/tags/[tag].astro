---
import BaseLayout from "../../layouts/BaseLayout.astro";
import PostCard from "../../components/PostCard.astro";
import { getCollection } from "astro:content";

export async function getStaticPaths() {
  const all = await getCollection("posts");
  const published = all.filter((p) => p.data.status !== "draft");

  const tagSet = new Set();
  for (const p of published) {
    for (const t of (p.data.tags ?? [])) tagSet.add(t);
  }

  return [...tagSet].map((tag) => ({ params: { tag } }));
}

const { tag } = Astro.params;

const all = await getCollection("posts");
const posts = all
  .filter((p) => p.data.status !== "draft")
  .filter((p) => (p.data.tags ?? []).includes(tag))
  .sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime());
---

<BaseLayout title={`#${tag}`}>
  <main class="wrap">
    <h1>#{tag}</h1>
    <section class="grid">
      {posts.map((post) => <PostCard post={post} />)}
    </section>
  </main>

  <style>
    .wrap { max-width: 1100px; margin: 0 auto; padding: 24px 16px; }
    .grid { display:grid; gap: 18px; grid-template-columns: repeat(3, minmax(0, 1fr)); }
    @media (max-width: 980px) { .grid { grid-template-columns: repeat(2, minmax(0, 1fr)); } }
    @media (max-width: 640px) { .grid { grid-template-columns: 1fr; } }
  </style>
</BaseLayout>
